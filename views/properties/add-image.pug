extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content=csrfToken)
    
block content
    div.py-10
        h1.text-4xl.my-10.text-center.font-extrabold.text-gray-800 Bienes
            span.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold.text-gray-700= page

        
        div(class='bg-white shadow-lg py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10')
            form(id='images' class='dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center'  method='POST' action=`/properties/add-image/${propertie.id}`)
                input(type='hidden' name='_csrf' value= csrfToken)
             

            button( id='uploadimg' type='button' class="mt-5 w-full py-1 bg-black hover:bg-gray-800 rounded text-white font-bold uppercase cursor-pointer") Publicar Propiedad
                                                  


block scripts
    script(src='/js/addImage.js')
            
   
        
