extends ../layout/index

block content
    div
        h1.text-4xl.my-10.text-center.font-extrabold.text-gray-800 Bienes
            span.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold.text-gray-700= page

        if errors
            div(class='max-w-md mx-auto my-10')
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow-lg
                form(method='POST').space-y-4
                    input(type='hidden' name='_csrf' value= csrfToken)                                   
                    div
                        label(for='password').block.text-sm.uppercase.text-gray-700.mb-2.font-bold Nueva Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa Tu nuevo Password"
                        type='password' name='password')
                    div
                        label(for='confirm_password').block.text-sm.uppercase.text-gray-700.mb-2.font-bold Confirmar Contraseñá
                        input#confirm_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Confirma tu  Password"
                        type='password' name='confirm_password')                        
                    input(class="p-1 uppercase w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-md cursor-pointer"
                          type='submit' value="Guardar Contraseña")
                    div.flex.items-center.justify-center
                        a(href="/auth/login" class='text-gray-600 text-xs hover:font-bold hover:underline') Inicia Sesión                