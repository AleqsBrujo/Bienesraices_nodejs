extends ../layout/index

block content
    div
        h1.text-4xl.my-10.text-center.font-extrabold.text-gray-800
            a(href='/home' class='text-decoration-none') Bienes
            a(href='/home' class='text-decoration-none font-normal') Raices 
        h2.text-center.text-2xl.font-extrabold.text-gray-700= page
        
        if errors
            div(class='max-w-md mx-auto my-10')
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow-lg
                form.space-y-4(method='POST' action='/auth/pass-recover')
                    input(type='hidden' name='_csrf' value= csrfToken)                    
                    div
                        label(for='email').block.text-sm.uppercase.text-gray-700.mb-2.font-bold Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tú Email"
                        type='email' name='email')                                     
                    input(class="p-1 uppercase w-full bg-black hover:bg-gray-800 text-white font-bold rounded-md cursor-pointer"
                          type='submit' value="Enviar Instrucciones")
                    div.flex.items-center.justify-between
                        a(href="/auth/newUser" class='text-gray-600 text-xs hover:font-bold') ¿Aún no tienes cuenta? Registrate
                        a(href="/auth/login" class='text-gray-600 text-xs hover:font-bold') ¿Ya tienes Cuenta? Inicia Sesión      